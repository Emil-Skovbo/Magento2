<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Ereactor\CategoryIconModule\Block\Widget\CategoryData" id="categoryicons">
        <label>CategoryIcon</label>
        <description>Input the ids of the categorys you wish to display comma separated i.e.: 38,20,3 </description>
        <parameters>
            <parameter name="id" xsi:type="text" required="true" visible="true" sort_order="10">
                <label>Category ids</label>
            </parameter>
            	<parameter name="parentcat"  xsi:type="multiselect"  visible="true" sort_order="3" source_model="Ereactor\CategoryIconModule\Model\Config\Source\Categorylist">
                <label translate="true">Select Categories (Any three) </label>
                <description translate="true">Category must have image uploaded</description>
            </parameter>
        </parameters>
    </widget>
</widgets>
